<%- include('header.ejs') %>
    <div class="login-wrapper">
        <div class="login-container">
            <div class="login-image"></div>
            <div class="login-form">
                <h2>Login</h2>
                <% if (errorMessages && errorMessages.length> 0) { %>
                    <span class="error-message">
                        <% errorMessages.forEach(function(message) { %>
                            <p>
                                <%= message %>
                            </p>
                            <% }) %>
                    </span>
                    <% } %>
                        <form method="post" action="/api/v1/users/login">
                            <div class="form-group">
                                <input type="text" class="form-control" id="enrollment" placeholder=" "
                                    name="enrollmentNumber" required>
                                <label class="placeholder" for="enrollment">Enrollment Number</label>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="password" placeholder=" "
                                    name="password" required>
                                <label class="placeholder" for="password">Password</label>
                            </div>
                            <button type="submit" class="btn btn-login">Login</button>
                        </form>
            </div>
        </div>
    </div>
    <%- include('footer.ejs') %>