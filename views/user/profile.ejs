<%- include("header.ejs") %>

<div class="container mt-5">

  <div class="row">
    <div class="col-12 text-center mt-5 mb-3">
      <h4>Welcome, Amanda</h4>
      <p id="currentDateTime" class="text-muted"></p>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
      <div class="profile-card mb-4">
        <form
          action="your_form_action_url"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="profile-header text-center">
            <img
              id="profileImage"
              src="https://via.placeholder.com/150"
              alt="User Profile"
              class="profile-img mb-3"
            />
            <div>
              <label for="profileImage">Upload/Update Image</label>
              <input
              type="file"
              id="imageUpload"
              name="profileImage"
              accept="image/*"
              class="form-control mb-3"
              onchange="loadFile(event)"
            />
            <h5 class="mt-3">Alexa Rawles</h5>
            <p class="text-muted">alexarawles@gmail.com</p>
            </div>
            
          </div>
          <div class="card-body mt-4">
            <div class="row mb-3">
              <div class="col-sm-3">
                <h6 class="py-3">Full Name</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                <input
                  type="text"
                  name="fullName"
                  class="form-control"
                  placeholder="Your Full Name"
                />
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-sm-3">
                <h6 class="py-3">Enrollment</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                <input
                  type="text"
                  name="enrollmentNumber"
                  class="form-control"
                  placeholder="Your Enrollment Number"
                />
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-sm-3">
                <h6 class="py-3">Email</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                <input
                  type="email"
                  name="email"
                  class="form-control"
                  placeholder="Your Email Address"
                />
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-sm-3">
                <h6 class="py-3">Date Of Birth</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                <input
                  type="date"
                  name="DOB"
                  class="form-control"
                  placeholder="Your Date Of Birth"
                />
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-sm-3">
                <h6 class="py-3">Phone Number</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                <input
                  type="text"
                  name="phoneNumber"
                  class="form-control"
                  placeholder="Your Phone Number"
                />
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-sm-3">
                <h6 class="py-3">Gender</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                <select class="form-control" name="gender">
                  <option>Select Gender</option>
                  <option value="Male">Male</option>
                  <option value="Female">Female</option>
                  <option value="Others">Others</option>
                </select>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-sm-3">
                <h6 class="py-3">Course</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                <select class="form-control" name="course">
                  <option>Select Course</option>
                  <option value="BCA">BCA</option>
                  <option value="MCA">MCA</option>
                  <option value="MBA(E.com)">MBA(E.com)</option>
                  <!-- <option value="Faculty">Faculty</option> -->
                </select>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12 text-end">
                <button type="button" class="btn btn-primary btn-edit">
                  Edit
                </button>
                <button type="submit" class="btn btn-outline-secondary">
                  Save Details
                </button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
    <br />
  </div>

</div>

<%- include("footer.ejs") %>
 