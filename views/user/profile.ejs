<%-include("header.ejs") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h4 class="mb-3">Welcome, Amanda</h4>
      <p class="text-muted">Tue, 07 June 2022</p>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
      <div class="profile-card mb-4">
        <div class="profile-header">
          <img
            src="https://via.placeholder.com/150"
            alt="User Profile"
            class="profile-img"
          />
          <h5 class="mt-3">Alexa Rawles</h5>
          <p class="text-muted">alexarawles@gmail.com</p>
        </div>
        <div class="card-body mt-4">
          <div class="row mb-3">
            <div class="col-sm-3">
              <h6 class="py-3">Full Name</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <input
                type="text"
                class="form-control"
                placeholder="Your Full Name"
              />
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-sm-3">
              <h6 class="py-3">Gender</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <select class="form-control">
                <option>Select Gender</option>
              </select>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-sm-3">
              <h6 class="py-3">Language</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <select class="form-control">
                <option>Select Language</option>
              </select>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-sm-3">
              <h6 class="py-3">Nick Name</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <input
                type="text"
                class="form-control"
                placeholder="Your Nick Name"
              />
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-sm-3">
              <h6 class="py-3">Country</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <input
                type="text"
                class="form-control"
                placeholder="Your Country"
              />
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-sm-3">
              <h6 class="py-3">Time Zone</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <input
                type="text"
                class="form-control"
                placeholder="Your Time Zone"
              />
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-sm-3">
              <h6 class="py-3">My email Address</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <input
                type="email"
                class="form-control"
                placeholder="Your Email Address"
                readonly
              />
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12 text-end">
              <button class="btn btn-primary btn-edit">Edit</button>
              <button class="btn btn-outline-secondary btn-add">
                +Add Email Address
              </button>
            </div>
          </div>
        </div>
      </div>
      <br />
    </div>
  </div>
</div>

<%-include("footer.ejs") %>
